<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="350.0" prefWidth="650.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <VBox alignment="CENTER" prefHeight="320.0" prefWidth="449.0" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="nameTextField" alignment="CENTER" prefHeight="26.0" prefWidth="234.0" promptText="Player Name" />
            <ColorPicker fx:id="colorPicker" prefHeight="26.0" prefWidth="163.0" promptText="Player Color" />
            <ComboBox fx:id="raceComboBox" prefHeight="26.0" prefWidth="163.0" promptText="Player Race" />
         </children>
      </VBox>
   </center>
   <bottom>
      <VBox alignment="CENTER" prefHeight="81.0" prefWidth="437.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="doneButton" mnemonicParsing="false" onMouseClicked="#done" text="Done" />
            <Label prefHeight="52.0" prefWidth="350.0" text="You may proceed when every player is setup. Each player must have a name at least 4 characters long and must have a race." textAlignment="CENTER" wrapText="true">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </Label>
         </children>
      </VBox>
   </bottom>
   <top>
      <VBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <ButtonBar fx:id="buttonBar" nodeOrientation="LEFT_TO_RIGHT" prefHeight="40.0" prefWidth="200.0" />
         </children>
      </VBox>
   </top>
</BorderPane>
